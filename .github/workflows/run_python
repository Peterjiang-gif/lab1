
name: Run Python Script

on: [push] # This workflow runs on every push to the repository

jobs:
  build:
    runs-on: ubuntu-latest # The job runs on a GitHub-hosted runner with the latest Ubuntu version

    steps:
    - name: Checkout code
      uses: actions/checkout@v4 # This action checks out your repository code to the runner

    - name: Set up Python
      uses: actions/setup-python@v5 # This action sets up the Python environment
      with:
        python-version: '3.10' # Specify the Python version you need

    - name: Install dependencies (optional)
      run: pip install -r requirements.txt # Use this step if your script has dependencies

    - name: Run Python script
      run: python hello.py # Executes your Python script
